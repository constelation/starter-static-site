{
  "private": true,
  "scripts": {
    "flow": "flow",
    "lint": "eslint site lib",
    "reinstall": "rimraf node_modules && npm install",
    "clean": "rimraf public",
    "prebuild": "npm run clean",
    "build": "BUILD_SITE=true webpack",
    "build:dev": "DEV=true npm run build -- -d --progress --colors",
    "build:prod": "PROD=true npm run build -- -p --progress --colors",
    "server:dev": "DEV=true webpack-dev-server -d --inline --hot --progress --history-api-fallback",
    "server:prod": "serve public/ -p 8080",
    "start": "npm run build:dev && npm run server:dev",
    "prod": "npm run build:prod && npm run server:prod",
    "deploy": "npm run build:prod && gh-pages -d public"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.13.0",
    "eslint-config-constelation": "^1.0.0",
    "eslint-plugin-auto-import": "^0.0.4",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.37.4",
    "gh-pages": "^0.12.0",
    "npm-install-webpack-plugin": "^4.0.0",
    "react-hot-loader": "^1.3.1",
    "rimraf": "^2.5.2",
    "serve": "^2.1.2",
    "static-site-generator-webpack-plugin": "^3.1.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "constelation-Animate_": "^6.0.0",
    "constelation-BackgroundImage": "^5.1.1",
    "constelation-Button": "^5.1.1",
    "constelation-Col": "^6.3.0",
    "constelation-Event_": "^6.2.2",
    "constelation-Flex": "^6.3.0",
    "constelation-Row": "^6.3.0",
    "constelation-Style_": "^6.0.0",
    "constelation-Text": "^6.3.0",
    "constelation-View": "^6.3.0",
    "glamor": "^2.20.20",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
