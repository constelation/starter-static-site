{
  "private": true,
  "scripts": {
    "clean": "rimraf public",
    "dev": "npm run clean && webpack-dev-server --progress --history-api-fallback",
    "build": "npm run clean && BUILD_PROD=true webpack --progress --colors",
    "build-prod": "npm run clean && BUILD_PROD=true webpack --progress --colors --optimize-minimize",
    "serve-build": "webpack-dev-server --content-base public --history-api-fallback --lazy",
    "start": "npm run dev"
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "npm-install-webpack-plugin": "^4.0.0",
    "rimraf": "^2.5.2",
    "static-site-generator-webpack-plugin": "^2.1.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-loader": "^6.2.4",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "react-html-document": "^2.2.0",
    "react-router": "^2.4.1"
  }
}
