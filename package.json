{
  "private": true,
  "scripts": {
    "precommit": "yarn run lint",
    "prepush": "yarn run lint",
    "postcheckout": "yarn",
    "postpull": "yarn",
    "flow": "flow",
    "lint": "eslint site lib",
    "lint-fix": "eslint --fix site lib",
    "reinstall": "rimraf node_modules && npm install",
    "source-explorer": "npm run build-js:prod && source-map-explorer public/main.js public/main.js.map",
    "clean": "rimraf public",
    "build-html": "webpack --env.buildSite",
    "build-html:dev": "npm run build-html -- --env.dev --progress",
    "build-html:prod": "npm run build-html -- --env.prod -p --progress",
    "build-js:dev": "webpack --env.dev --env.buildJS --progress",
    "build-js:prod": "webpack --env.prod -p --progress",
    "server:dev": "webpack-dev-server --env.dev",
    "server:prod": "serve public/ -p 8080",
    "prod": "npm run clean && npm run build-html:prod && npm run build-js:prod && npm run server:prod",
    "dev": "npm run clean && npm run build-html:dev && npm run build-js:dev && npm run server:dev",
    "start": "npm run clean && npm run build-js:dev && npm run server:dev",
    "deploy": "rimraf docs && cp -r public docs"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-do-expressions": "^6.8.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-jsx-source": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.18.0",
    "babili-webpack-plugin": "^0.0.7",
    "compression-webpack-plugin": "^0.3.2",
    "ejs-loader": "^0.3.0",
    "eslint": "^3.13.1",
    "eslint-config-constelation": "^1.0.1",
    "eslint-plugin-auto-import": "^0.0.4",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.38.0",
    "flow-typed": "^2.0.0",
    "html-webpack-plugin": "^2.26.0",
    "react-hot-loader": "3.0.0-beta.6",
    "rimraf": "^2.5.2",
    "serve": "^2.4.0",
    "source-map-explorer": "^1.3.3",
    "static-site-generator-webpack-plugin": "^3.1.0",
    "url-loader": "^0.5.7",
    "webpack": "beta",
    "webpack-dev-server": "beta"
  },
  "dependencies": {
    "constelation-Animate_": "^6.4.0",
    "constelation-BackgroundImage": "^5.1.1",
    "constelation-Button": "^5.1.1",
    "constelation-Col": "^6.3.0",
    "constelation-Event_": "^6.2.2",
    "constelation-Flex": "^6.3.0",
    "constelation-Row": "^6.3.0",
    "constelation-Style_": "^6.0.0",
    "constelation-Text": "^6.3.3",
    "constelation-View": "^6.3.0",
    "glamor": "^2.20.20",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.0",
    "react-router-scroll": "^0.4.1"
  }
}
