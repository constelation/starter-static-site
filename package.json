{
  "private": true,
  "scripts": {
    "clean": "rimraf public",
    "dev": "webpack-dev-server -d --inline --hot --progress --history-api-fallback",
    "build": "npm run clean && BUILD_SITE=true webpack -d --progress --colors",
    "build-quiet": "npm run clean && BUILD_SITE=true webpack",
    "build-prod": "npm run clean && BUILD_SITE=true webpack -p --progress --colors --optimize-minimize",
    "serve-build": "serve public/ -p 8080",
    "lint": "eslint site lib",
    "start": "npm run build-quiet && npm run dev"
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^2.12.0",
    "eslint-config-kylpo": "^1.0.0",
    "eslint-plugin-react": "^5.1.1",
    "npm-install-webpack-plugin": "^4.0.0",
    "rimraf": "^2.5.2",
    "serve": "^1.4.0",
    "static-site-generator-webpack-plugin": "^2.1.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-loader": "^6.2.4",
    "radium": "^0.17.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "react-html-document": "^2.2.0",
    "react-router": "^2.4.1",
    "react-router-scroll": "^0.2.0"
  }
}
