{
  "private": true,
  "scripts": {
    "flow": "flow",
    "lint": "eslint site lib",
    "reinstall": "rimraf node_modules && npm install",
    "clean": "rimraf public",
    "prebuild": "npm run clean",
    "build": "webpack --env.buildSite",
    "build:dev": "npm run build -- --env.dev -d --progress --colors",
    "build:prod": "npm run build -- --env.prod -p --progress --colors",
    "server:dev": "webpack-dev-server --host 0.0.0.0 --port 8080 --env.dev -d --progress --history-api-fallback",
    "server:prod": "serve public/ -p 8080",
    "start": "npm run build:dev && npm run server:dev",
    "prod": "npm run build:prod && npm run server:prod",
    "deploy": "npm run build:prod && gh-pages -d public"
  },
